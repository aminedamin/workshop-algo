ALGORITHM char 
VAR
i : INTEGER ;
c : char;
v :INTEGER;
j := 0;
i := 0;
v := 0;
BEGIN
Write ("saisir un caractere"):
read (c);
REPEAT
read (c);
j := j+1 ;
    IF (c ="") THEN
        i:= i+1:
    ELSE(c="a" or c="e" or c="i" or c="o"or c="u"or c="A" or c="E" or c="I" or c="U") THEN
        v := v+1;
    END_IF
    Write("The length of the sentence",j);
    Write("The number of words in the sentence",i);
    Write("The number of vowels in the sentence",v);    

UNTIL (c=".")
END